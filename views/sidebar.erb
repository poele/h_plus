	    <form method="POST" action="/logout" class="logged"><br>
	    <input type="hidden" name="_method" value="DELETE">
	    <input type="submit" value="Logout">
	    </form>
	    
	  <% else %>
	  	<div class="message">
	  	<%= @incorrect %>
			<%= @success %>
			<%= @notin %>
			<%= @notpop %>
			</div>
